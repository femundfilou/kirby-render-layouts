{
	"git": {
		"requireUpstream": false,
		"push": false,
		"tagName": "v${version}",
		"commitMessage": "chore: release v${version}"
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": false
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "conventionalcommits",
			"infile": "CHANGELOG.md"
		},
		"@release-it/bumper": {
			"in": "composer.json",
			"out": "composer.json"
		}
	}
}
